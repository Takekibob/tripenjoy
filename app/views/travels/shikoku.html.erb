<%= link_to '投稿', new_travel_path %>

<div class="travels-container">
<% @travels.each do |travel| %>
    <div class="travel">

    <%= image_tag travel.image_url, size: "250x200" if travel.image? %>

    <%= t.user.email %>
      <%= travel.area %>
      <%= travel.created_at %>

      <%= link_to "詳細へ", travel_path(travel.id) %>
      <%= link_to "編集する", edit_travel_path(travel.id) %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= button_to "削除する", travel_path(travel.id), method: :delete %>
    </div>
<% end %>
</div>
